<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>controlUser</servlet-name>
    <servlet-class>controller.ControlUserAdmin</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>controlCreate</servlet-name>
    <servlet-class>controller.ControlCreate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>controlProduktAdmin</servlet-name>
    <servlet-class>controller.ControlProduktAdmin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>controlReceptAdmin</servlet-name>
    <servlet-class>controller.ControlReceptAdmin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>controlRaavareAdmin</servlet-name>
    <servlet-class>controller.ControlRaavareAdmin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>controlRaavareBatchAdmin</servlet-name>
    <servlet-class>controller.ControlRaavareBatchAdmin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>controlLogin</servlet-name>
    <servlet-class>controller.ControlLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>controlUser</servlet-name>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>controlCreate</servlet-name>
    <url-pattern>/create/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controlProduktAdmin</servlet-name>
    <url-pattern>/produkt/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controlReceptAdmin</servlet-name>
    <url-pattern>/recept/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controlRaavareAdmin</servlet-name>
    <url-pattern>/raavare/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controlRaavareBatchAdmin</servlet-name>
    <url-pattern>/raavarebatch/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controlLogin</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>403</error-code>
    <location>/not_authorized.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/not_found.jsp</location>
  </error-page>
  <security-constraint>
    <display-name>User administration</display-name>
    <web-resource-collection>
      <web-resource-name>User administration</web-resource-name>
      <description>accessible by administrator users</description>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrator</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>Raavare administration</display-name>
    <web-resource-collection>
      <web-resource-name>Raavare Controller</web-resource-name>
      <description>accessible by Administrator and Farmaceut</description>
      <url-pattern>/raavare/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrator</role-name>
      <role-name>farmaceut</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>Recept administration</display-name>
    <web-resource-collection>
      <web-resource-name>Recept controller</web-resource-name>
      <description>accessible by administrator and farmaceut</description>
      <url-pattern>/recept/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrator</role-name>
      <role-name>farmaceut</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>RaavareBatch and produktBatch administration</display-name>
    <web-resource-collection>
      <web-resource-name>Raavare and produkt batch administration</web-resource-name>
      <description>accessible by all beside operator</description>
      <url-pattern>/raavarebatch/*</url-pattern>
      <url-pattern>/produkt/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrator</role-name>
      <role-name>farmaceut</role-name>
      <role-name>vaerkfoerer</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>First Login</display-name>
    <web-resource-collection>
      <web-resource-name>Login Controller</web-resource-name>
      <description>accessible by all active users</description>
      <url-pattern>/login/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrator</role-name>
      <role-name>farmaceut</role-name>
      <role-name>vaerkfoerer</role-name>
      <role-name>operatoer</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/error_login.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <security-role>
    <role-name>administrator</role-name>
  </security-role>
  <security-role>
    <role-name>farmaceut</role-name>
  </security-role>
  <security-role>
    <role-name>vaerkfoerer</role-name>
  </security-role>
  <security-role>
    <role-name>operatoer</role-name>
  </security-role>
</web-app>